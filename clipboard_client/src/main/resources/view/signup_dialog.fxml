<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="350.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <VBox>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </padding>
      <Label text="Username">
         <padding>
            <Insets bottom="5.0"/>
         </padding>
      </Label>
      <TextField fx:id="username"/>
      <Label text="Email">
         <padding>
            <Insets bottom="5.0" top="5.0"/>
         </padding>
      </Label>
      <TextField fx:id="email" layoutX="20.0" layoutY="41.0"/>
      <Label text="Password">
         <padding>
            <Insets bottom="5.0" top="5.0"/>
         </padding>
      </Label>
      <PasswordField fx:id="password"/>
      <Label layoutX="20.0" layoutY="119.0" text="Confirm">
         <padding>
            <Insets bottom="5.0" top="5.0"/>
         </padding>
      </Label>
      <PasswordField layoutX="20.0" layoutY="145.0" fx:id="passwordConfirm"/>
      <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS"/>
      <HBox>
         <VBox.margin>
            <Insets/>
         </VBox.margin>
         <JFXButton buttonType="RAISED" maxWidth="1.7976931348623157E308" text="Cancel" fx:id="cancel"/>
         <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
         <JFXButton buttonType="RAISED" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308"
                    text="Sign In" fx:id="signIn"/>
         <JFXButton buttonType="RAISED" layoutX="327.0" layoutY="10.0" maxWidth="1.7976931348623157E308"
                    text="Confirm" fx:id="confirm"/>
      </HBox>
   </VBox>
</VBox>
