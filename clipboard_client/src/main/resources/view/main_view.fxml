<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXToolbar?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<?import org.controlsfx.control.GridView?>
<?import javafx.scene.layout.StackPane?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import java.net.URL?>
<StackPane maxHeight="-Infinity" maxWidth="600" minHeight="-Infinity" minWidth="400" prefHeight="400.0"
           prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.clipboard.client.ui.controller.MainViewController"
           fx:id="root"
>

   <stylesheets>
      <URL value="@/style/main.css" />
   </stylesheets>
   <VBox>
      <JFXToolbar style="-fx-background-color: #fafafa;">
         <left>
            <JFXButton fx:id="menuToggle" BorderPane.alignment="CENTER" focusTraversable="false">
               <graphic>
                  <FontAwesomeIconView glyphName="BARS"/>
               </graphic>
            </JFXButton>
         </left>
         <right>
            <HBox BorderPane.alignment="CENTER">
               <JFXButton fx:id="layout" layoutX="10.0" layoutY="10.0" focusTraversable="false">
                  <graphic>
                     <FontAwesomeIconView glyphName="LIST"/>
                  </graphic>
               </JFXButton>
            </HBox>
         </right>
         <center>
            <HBox BorderPane.alignment="CENTER">
               <TextField HBox.hgrow="ALWAYS" focusTraversable="false" fx:id="searchEntry"/>
               <JFXButton fx:id="search">
                  <graphic>
                     <FontAwesomeIconView glyphName="SEARCH"/>
                  </graphic>
               </JFXButton>
            </HBox>
         </center>
         <VBox.margin>
            <Insets right="10" top="10" left="10"/>
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
         </padding>
      </JFXToolbar>
      <HBox VBox.vgrow="ALWAYS">

         <JFXToolbar style="-fx-background-color: #fafafa;" fx:id="menu">
            <center>
               <VBox BorderPane.alignment="CENTER">
                  <JFXButton focusTraversable="false"
                             alignment="TOP_LEFT"
                             maxWidth="1.7976931348623157E308"
                             text="Clipboard"
                             fx:id="clipboard">
                     <graphic>
                        <FontAwesomeIconView glyphName="CLIPBOARD"/>
                     </graphic>
                  </JFXButton>
                  <JFXButton focusTraversable="false"
                             alignment="TOP_LEFT" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" fx:id="star"
                             text="Star">
                     <graphic>
                        <FontAwesomeIconView glyphName="STAR"/>
                     </graphic>
                  </JFXButton>
                  <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS"/>
                  <JFXButton focusTraversable="false" alignment="TOP_LEFT" layoutX="10.0" layoutY="62.0" maxWidth="1.7976931348623157E308"
                             text="Account" fx:id="account">
                     <graphic>
                        <FontAwesomeIconView glyphName="USER"/>
                     </graphic>
                  </JFXButton>
                  <JFXButton focusTraversable="false" alignment="TOP_LEFT" layoutX="10.0" layoutY="88.0" maxWidth="1.7976931348623157E308"
                             text="Setting" fx:id="setting">
                     <graphic>
                        <FontAwesomeIconView glyphName="COG"/>
                     </graphic>
                  </JFXButton>
                  <JFXButton focusTraversable="false" alignment="TOP_LEFT" layoutX="10.0" layoutY="114.0" maxWidth="1.7976931348623157E308"
                             text="Signout" fx:id="signout">
                     <graphic>
                        <FontAwesomeIconView glyphName="SIGN_OUT"/>
                     </graphic>
                  </JFXButton>
               </VBox>
            </center>
            <HBox.margin>
               <Insets top="10" left="10" bottom="10"/>
            </HBox.margin>
         </JFXToolbar>

         <GridView fx:id="container"  maxWidth="1.7976931348623157E308"
                   maxHeight="1.7976931348623157E308" HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets top="10" bottom="10"/>
            </HBox.margin>
         </GridView>
      </HBox>
   </VBox>

</StackPane>
