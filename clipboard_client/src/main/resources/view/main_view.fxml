<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXToolbar?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<?import org.controlsfx.control.GridView?>
<?import javafx.scene.layout.StackPane?>
<StackPane maxHeight="-Infinity" maxWidth="600" minHeight="-Infinity" minWidth="400" prefHeight="400.0"
           prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.clipboard.client.controller.MainViewController"
           fx:id="root"
>

   <VBox>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </padding>

      <JFXToolbar style="-fx-background-color: #fafafa;">
         <left>
            <JFXButton BorderPane.alignment="CENTER" focusTraversable="false">
               <graphic>
                  <FontAwesomeIconView glyphName="BARS"/>
               </graphic>
            </JFXButton>
         </left>
         <right>
            <HBox BorderPane.alignment="CENTER">
               <JFXButton layoutX="10.0" layoutY="10.0">
                  <graphic>
                     <FontAwesomeIconView glyphName="LIST"/>
                  </graphic>
               </JFXButton>
            </HBox>
         </right>
         <center>
            <HBox BorderPane.alignment="CENTER">
               <TextField HBox.hgrow="ALWAYS" focusTraversable="false"/>
               <JFXButton>
                  <graphic>
                     <FontAwesomeIconView glyphName="SEARCH"/>
                  </graphic>
               </JFXButton>
            </HBox>
         </center>

         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
         </padding>
      </JFXToolbar>
      <HBox VBox.vgrow="ALWAYS">

         <padding>
            <Insets bottom="10.0" top="10.0"/>
         </padding>

         <JFXToolbar style="-fx-background-color: #fafafa;">
            <center>
               <VBox BorderPane.alignment="CENTER">
                  <JFXButton alignment="TOP_LEFT" maxWidth="1.7976931348623157E308" text="Clipboard" fx:id="clipboard">
                     <graphic>
                        <FontAwesomeIconView glyphName="CLIPBOARD"/>
                     </graphic>
                  </JFXButton>
                  <JFXButton alignment="TOP_LEFT" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" fx:id="star"
                             text="Star">
                     <graphic>
                        <FontAwesomeIconView glyphName="STAR"/>
                     </graphic>
                  </JFXButton>
                  <JFXButton alignment="TOP_LEFT" layoutX="10.0" layoutY="36.0" maxWidth="1.7976931348623157E308"
                             text="Trash" fx:id="trash">
                     <graphic>
                        <FontAwesomeIconView glyphName="TRASH"/>
                     </graphic>
                  </JFXButton>
                  <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS"/>
                  <JFXButton alignment="TOP_LEFT" layoutX="10.0" layoutY="62.0" maxWidth="1.7976931348623157E308"
                             text="Account" fx:id="account">
                     <graphic>
                        <FontAwesomeIconView glyphName="USER"/>
                     </graphic>
                  </JFXButton>
                  <JFXButton alignment="TOP_LEFT" layoutX="10.0" layoutY="88.0" maxWidth="1.7976931348623157E308"
                             text="Setting" fx:id="setting">
                     <graphic>
                        <FontAwesomeIconView glyphName="COG"/>
                     </graphic>
                  </JFXButton>
                  <JFXButton alignment="TOP_LEFT" layoutX="10.0" layoutY="114.0" maxWidth="1.7976931348623157E308"
                             text="Signout" fx:id="signout">
                     <graphic>
                        <FontAwesomeIconView glyphName="SIGN_OUT"/>
                     </graphic>
                  </JFXButton>
               </VBox>
            </center>
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
         </JFXToolbar>
         <GridView fx:id="container"  maxWidth="1.7976931348623157E308"
                   maxHeight="1.7976931348623157E308" HBox.hgrow="ALWAYS">
         </GridView>
      </HBox>
   </VBox>

</StackPane>
