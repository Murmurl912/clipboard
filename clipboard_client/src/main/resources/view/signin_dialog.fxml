<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <VBox>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </padding>
      <Label text="Username">
         <padding>
            <Insets bottom="5.0"/>
         </padding>
      </Label>
      <TextField fx:id="username"/>
      <Label text="Password">
         <padding>
            <Insets bottom="5.0" top="5.0"/>
         </padding>
      </Label>
      <PasswordField fx:id="password"/>
      <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS"/>
      <HBox>
         <VBox.margin>
            <Insets/>
         </VBox.margin>
         <JFXButton layoutX="340.0" layoutY="10.0" maxWidth="1.7976931348623157E308" text="Cancel" fx:id="cancel"/>
         <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
         <JFXButton maxWidth="1.7976931348623157E308" text="Forget Password?" fx:id="passwordReset"/>
         <JFXButton layoutX="320.0" layoutY="10.0" maxWidth="1.7976931348623157E308" text="Sign Up" fx:id="signup"/>
         <JFXButton layoutX="320.0" layoutY="10.0" maxWidth="1.7976931348623157E308" text="Confirm" fx:id="confirm"/>
      </HBox>
   </VBox>
</VBox>
